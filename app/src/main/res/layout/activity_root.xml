<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.ui.RootActivity">


<androidx.fragment.app.FragmentContainerView
    android:id="@+id/rootFragmentContainerView"
    android:layout_width="@dimen/zero"
    android:layout_height="@dimen/zero"
    android:name="androidx.navigation.fragment.NavHostFragment"
    app:navGraph="@navigation/navigation_graph"
    app:defaultNavHost="true"
    app:layout_constraintBottom_toTopOf="@+id/bottomNavigationView"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>

<com.google.android.material.bottomnavigation.BottomNavigationView
    android:id="@+id/bottomNavigationView"
    android:layout_width="@dimen/zero"
    android:layout_height="wrap_content"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:menu="@menu/navigation_items"
    app:itemTextAppearanceInactive="@style/bottomNav"
    app:itemTextAppearanceActive="@style/bottomNavChecked"
    app:itemIconTint="@color/secondary"
    app:itemTextColor="@color/secondary"
    />
</androidx.constraintlayout.widget.ConstraintLayout>