<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/BaseLinear"
    android:paddingTop="@dimen/zero"
    android:paddingLeft="@dimen/zero"
    android:paddingRight="@dimen/zero"
    tools:context=".SettingsActivity"
    tools:ignore="Overdraw">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_stroke"
        android:background="@android:color/transparent"
        android:layout_marginBottom="@dimen/two_four">

        <ImageButton android:id="@+id/back_button"
            android:src="@drawable/back"
            android:contentDescription="@string/back_text"
            style="@style/IconSetting"
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="@dimen/base"
            android:backgroundTint="@android:color/transparent"
            android:theme="@style/Theme.TextPlaylistMaker"
             />

        <TextView android:text="@string/setting_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="@dimen/base"
            style="@style/BaseTitle" />

    </LinearLayout>

    <FrameLayout style="@style/FrameSetting">

        <TextView android:text="@string/night_theme"
            style="@style/TextSetting" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/themeSwitcher"
            android:layout_gravity="end"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginHorizontal="@dimen/base"
            />

    </FrameLayout>

    <FrameLayout style="@style/FrameSetting">

        <TextView android:text="@string/share"
            style="@style/TextSetting" />

        <ImageButton android:id="@+id/share_button"
            android:src="@drawable/share"
            android:contentDescription="@string/share_text"
            style="@style/IconSetting"
            tools:ignore="ImageContrastCheck" />

    </FrameLayout>

    <FrameLayout  style="@style/FrameSetting">

        <TextView android:text="@string/support"
            style="@style/TextSetting" />

        <ImageButton android:id="@+id/send_button"
            android:src="@drawable/support"
            android:contentDescription="@string/support_text"
            style="@style/IconSetting"
            tools:ignore="ImageContrastCheck" />

    </FrameLayout>

    <FrameLayout  style="@style/FrameSetting">

        <TextView android:text="@string/user_docs"
            style="@style/TextSetting" />

        <ImageButton android:id="@+id/user_docs"
            android:src="@drawable/send"
            android:contentDescription="@string/oferta"
            style="@style/IconSetting"
            tools:ignore="ImageContrastCheck" />

    </FrameLayout>


</LinearLayout>