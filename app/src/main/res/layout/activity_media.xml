<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/BaseLinear"
    android:paddingTop="@dimen/zero"
    android:paddingLeft="@dimen/zero"
    android:paddingRight="@dimen/zero"
    tools:context=".media.ui.MediaActivity"
    tools:ignore="Overdraw">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_stroke"
        android:background="@android:color/transparent"
        android:layout_marginBottom="@dimen/two_four">

        <ImageButton android:id="@+id/back_button"
            android:src="@drawable/back"
            android:contentDescription="@string/back_text"
            style="@style/IconSetting"
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="@dimen/base"
            android:backgroundTint="@android:color/transparent"
            android:theme="@style/Theme.TextPlaylistMaker"
            />

        <TextView android:text="@string/media"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="@dimen/base"
            style="@style/BaseTitle" />

    </LinearLayout>


    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/new_color"
        app:tabTextColor="@color/secondary"
        android:textAllCaps="false"
        app:tabIndicatorColor="@color/secondary"
        app:tabTextAppearance="@android:style/TextAppearance.Widget.TabWidget"
        android:textSize="@dimen/status_text"
        android:fontFamily="@font/ys_display_medium"
        app:tabIndicatorHeight="2dp"
        tools:ignore="SpeakableTextPresentCheck" />

    <androidx.viewpager2.widget.ViewPager2
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/viewPager"/>



</LinearLayout>