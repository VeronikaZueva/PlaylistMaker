<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BaseLinear">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingTop">@dimen/base</item>
        <item name="android:paddingLeft">@dimen/base</item>
        <item name="android:paddingRight">@dimen/base</item>
        <item name="android:paddingBottom">@dimen/padding_bottom</item>
    </style>
    <style name="BaseTitle">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:fontWeight">@dimen/weight_500</item>
        <item name="android:textSize">@dimen/base_text</item>
        <item name="android:theme">@style/Theme.TextPlaylistMaker</item>
    </style>
    <style name="ButtonMain" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/zero</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/accent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/base_text</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:fontWeight">@dimen/weight_500</item>
        <item name="android:layout_gravity">center</item>
        <item name="cornerRadius">@dimen/base</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/min_padding</item>
        <item name="iconTint">@color/black</item>
        <item name="textAllCaps">false</item>
    </style>
    <style name="TextSetting">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:fontWeight">@dimen/weight_400</item>
        <item name="android:textSize">@dimen/setting_text</item>
        <item name="android:theme">@style/Theme.TextPlaylistMaker</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">start</item>
    </style>
    <style name="IconSetting">
        <item name="android:layout_width">@dimen/header_stroke</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:theme">@style/Theme.IconPlaylistMaker</item>
    </style>
    <style name="FrameSetting">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_menu_string</item>
        <item name="android:paddingStart">@dimen/base</item>
        <item name="android:paddingEnd">@dimen/zero</item>
    </style>
    <style name="InputContainer">
        <item name="android:background">@drawable/input</item>
    </style>
    <style name="InputSearch">
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:drawableStart">@drawable/search_hint</item>
    </style>
    <style name="TrackShortInfoText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:fontWeight">@dimen/weight_400</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">@dimen/minimum_text</item>
    </style>
    <style name="PointIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingHorizontal">@dimen/portion</item>
        <item name="android:src">@drawable/ellipse</item>
    </style>
    <style name="StatusText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginVertical">@dimen/base</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/secondary</item>
        <item name="android:textSize">@dimen/status_text</item>
        <item name="textAllCaps">false</item>
    </style>
    <style name="ParamName">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/min_padding</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">@dimen/text_button</item>
    </style>
    <style name="ParamValue">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/min_padding</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/secondary</item>
        <item name="android:textSize">@dimen/text_button</item>
    </style>
    <style name="bottomNavChecked">
        <item name="android:textColor">@color/blue</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>
    <style name="bottomNav">
        <item name="android:textColor">@color/secondary</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>
    <style name="BorderPlaylistImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/min_padding</item>
    </style>
    <style name="TextInputPlaylistCreate">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/setting_text</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">text</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/gray_change</item>
    </style>
    <style name="FieldInputPlaylistCreate" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusBottomEnd">@dimen/portion</item>
        <item name="boxCornerRadiusBottomStart">@dimen/portion</item>
        <item name="boxCornerRadiusTopEnd">@dimen/portion</item>
        <item name="boxCornerRadiusTopStart">@dimen/portion</item>
        <item name="boxStrokeColor">@drawable/selector_input_create</item>
        <item name="strokeWidth">@dimen/one</item>
        <item name="hintTextColor">@color/blue</item>
    </style>
    <style name="PlaylistText">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textColor">@color/dark</item>
        <item name="android:textSize">@dimen/status_text</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="AlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorPrimary">@color/blue</item>
        <item name="android:background">@color/accent</item>
        <item name="materialAlertDialogTitleTextStyle">@style/MaterialAlertDialogText</item>
        <item name="materialAlertDialogBodyTextStyle">@style/MaterialDialogTextBody</item>
    </style>
    <style name="MaterialAlertDialogText" parent="@style/MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/dark</item>
        <item name="android:layout_weight">500</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>
    <style name="MaterialDialogTextBody" parent="@style/MaterialAlertDialog.Material3.Body.Text">
        <item name="android:textColor">@color/dark</item>
        <item name="android:layout_weight">400</item>
        <item name="android:textSize">@dimen/setting_text</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>
</resources>