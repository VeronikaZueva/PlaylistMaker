<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="InputContainer">
    <item name="android:background">@drawable/input_night</item>
    </style>
    <style name="InputSearch">
        <item name="android:textColor">@color/main</item>
        <item name="android:textColorHint">@color/main</item>
        <item name="android:drawableStart">@drawable/search_hint_night</item>
    </style>
    <style name="TrackShortInfoText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:fontWeight">@dimen/weight_400</item>
        <item name="android:textColor">@color/accent</item>
        <item name="android:textSize">@dimen/minimum_text</item>
    </style>
    <style name="PointIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:paddingHorizontal">@dimen/portion</item>
        <item name="android:src">@drawable/ellipse_night</item>
    </style>
    <style name="StatusText">
        android:textColor="@color/black"
    </style>
</resources>