<resources>
    <style name="Base.Theme.PlaylistMaker" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:windowBackground">@color/main</item>
    </style>
    <style name="Theme.MainPlaylistMaker" parent="Base.Theme.PlaylistMaker">
        <item name="android:windowBackground">@color/main</item>
    </style>
    <style name="Theme.TextPlaylistMaker" parent="Base.Theme.PlaylistMaker">
        <item name="android:textColor">@color/accent</item>
        <item name="android:tint">@color/accent</item>
    </style>
    <style name="Theme.IconPlaylistMaker" parent="Base.Theme.PlaylistMaker">
        <item name="android:tint">@color/accent</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
    </style>
    <style name="Theme.CardContainer" parent="Base.Theme.PlaylistMaker">
        <item name="android:background">@color/main</item>
    </style>
    <style name="Theme.Switch" parent="Base.Theme.PlaylistMaker">
        <item name="trackTint">@color/light</item>
        <item name="thumbTint">@color/blue</item>
    </style>
</resources>